<Page x:Class="WPF_Mentoring.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Mentoring.Pages"
      
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Registration" Background="#272f34">
    <Page.Resources></Page.Resources>
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        
        <DockPanel LastChildFill="True">
            
            
            <StackPanel Orientation="Horizontal">
                
                        <StackPanel Orientation="Vertical" Margin="103,10,10,120">
                    <Label>Name:</Label>
                    <TextBox x:Name="name" IsReadOnly="False" IsEnabled="True" Width="250"></TextBox>
                    <Label>Klasse:</Label>
                    <TextBox x:Name="klasse"></TextBox>
                    <Label>Email:</Label>
                    <TextBox x:Name="email"></TextBox>
                    <Label>Passwort:</Label>
                    <PasswordBox x:Name="password" IsEnabled="True" ></PasswordBox>
                    <Label>Passwort erneut eingeben:</Label>
                    <PasswordBox x:Name="passwortCheck_Passwordbox" IsEnabled="True"></PasswordBox>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label Margin="75,12,10,10">Mentor</Label>
                        <CheckBox Margin="6"></CheckBox>
                        
                    </StackPanel>
                    <ui:Button Content="Registrieren" Icon="Person12" Appearance="Primary" Margin="65,10,10,10" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TreeView AllowDrop="True"  Width="500" Height="400" x:Name="subjects_TreeView" SelectedItemChanged="subjects_TreeView_SelectedItemChanged" Margin="105,5" CheckBox.Checked="CheckBox_Checked" CheckBox.Unchecked="CheckBox_Unchecked">
                        <TreeViewItem Header="Allgemeine Fächer" IsExpanded="False">
                            <CheckBox>Deutsch</CheckBox>
                            <CheckBox>Englisch</CheckBox>
                            <CheckBox>Religion</CheckBox>
                            <CheckBox>GGP</CheckBox>
                            <CheckBox>Angewandte Mathematik</CheckBox>
                            <CheckBox>Naturwissenschaften</CheckBox>
                            <CheckBox>Bewegung und Sport</CheckBox>
                            <CheckBox>SopK</CheckBox>
                        </TreeViewItem>

                        <TreeViewItem Header="Mechatronik Fachschule" IsExpanded="False">
                            <CheckBox>Angewandte Informatik</CheckBox>
                            <CheckBox>Unternehmensführung</CheckBox>
                            <CheckBox>Konstruktion und Projektmanagement</CheckBox>
                            <CheckBox>Mechatronische Systeme</CheckBox>
                            <CheckBox>Fertigungstechnik und Mechanik</CheckBox>
                            <CheckBox>Informationstechnik und Automatisierung</CheckBox>
                            <CheckBox>Produktionstechnik</CheckBox>
                            <CheckBox>Laboratorium</CheckBox>
                            <CheckBox>Werkstätte und Produktionstechnik</CheckBox>
                        </TreeViewItem>

                        <TreeViewItem Header="Maschinenbau" IsExpanded="False">
                            <CheckBox>Wirtschaft und Recht</CheckBox>
                            <CheckBox>Konstruktion und Projektmanagement</CheckBox>
                            <CheckBox>Technische Mechanik und Berechnung</CheckBox>
                            <CheckBox>Fertigungstechnik</CheckBox>
                            <CheckBox>Maschinen und Anlagen</CheckBox>
                            <CheckBox>Automatisierungstechnik</CheckBox>
                            <CheckBox>Elektrotechnik und Elektronik</CheckBox>
                            <CheckBox>Angewandte Informatik und Informationstechnik</CheckBox>
                            <CheckBox>Robotik und Prozessdatenverarbeitung</CheckBox>
                            <CheckBox>Laboratorium</CheckBox>

                        </TreeViewItem>

                        <TreeViewItem Header="Elektrotechnik" IsExpanded="False">
                            <CheckBox>Wirtschaft und Recht</CheckBox>
                            <CheckBox>Energiesysteme</CheckBox>
                            <CheckBox>Automatisierungstechnik</CheckBox>
                            <CheckBox>Antriebstechnik</CheckBox>
                            <CheckBox>Industrieelektronik</CheckBox>
                            <CheckBox>Fachspezifische Informationstechnik</CheckBox>
                            <CheckBox>Computergeschützte Projektentwicklung</CheckBox>
                            <CheckBox>Laboratorium</CheckBox>
                            <CheckBox>Werkstätte und Produktionstechnik</CheckBox>
                            <CheckBox>Schulautonome Vertiefungsgegenstände</CheckBox>
                        </TreeViewItem>

                        <TreeViewItem Header="Wirtschaftsingenieure – Maschinenbau" IsExpanded="False">
                            <CheckBox>Unternehmensführung u. Wirtschaftsrecht mit Übungen in (Business Englisch)</CheckBox>
                            <CheckBox>Betriebstechnik</CheckBox>
                            <CheckBox>Informatik und Informationssysteme</CheckBox>
                            <CheckBox>Konstruktion und Berechnung</CheckBox>
                            <CheckBox>Werkstoff- und Fertigungstechnik</CheckBox>
                            <CheckBox>Maschinen, Anlagen, Automatisierung</CheckBox>
                            <CheckBox>Laboratorium</CheckBox>
                        </TreeViewItem>

                        <TreeViewItem Header="Informationstechnik" IsExpanded="False">
                            <CheckBox>Wirtschaft und Recht</CheckBox>
                            <CheckBox>Softwareentwicklung</CheckBox>
                            <CheckBox>Informationstechnische Projekte</CheckBox>
                            <CheckBox>Informationssysteme</CheckBox>
                            <CheckBox>Systemtechnik</CheckBox>
                            <CheckBox>Cloud Computing und industrielle Technologien</CheckBox>
                            <CheckBox>Medientechnik</CheckBox>
                            <CheckBox>Netzwerktechnik</CheckBox>
                            <CheckBox>IT-Sicherheit</CheckBox>
                        </TreeViewItem>
                        
                    </TreeView>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Viewbox>
</Page>
    
    