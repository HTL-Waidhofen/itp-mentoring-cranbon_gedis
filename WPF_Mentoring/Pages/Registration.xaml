<Page x:Class="WPF_Mentoring.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Mentoring.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration" Background="transparent">

    <Page.Resources></Page.Resources>
    <Viewbox Stretch="Fill" StretchDirection="Both">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Width="800" Height="20">
                <MenuItem Header="Anmeldung" Click="MenuItem_Anmeldung_Click"></MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="10">
                    <Label>Name:</Label>
                    <TextBox x:Name="name_Textbox" IsReadOnly="False" IsEnabled="True"></TextBox>
                    <Label>Klasse:</Label>
                    <TextBox x:Name="klasse_Textbox"></TextBox>
                    <Label>Email:</Label>
                    <TextBox x:Name="eMail_Textbox"></TextBox>
                    <Label>Passwort:</Label>
                    <PasswordBox x:Name="passwort_Passwordbox" IsEnabled="True" Height="20" ></PasswordBox>
                    <Label>Passwort erneut eingeben:</Label>
                    <PasswordBox x:Name="passwortCheck_Passwordbox" IsEnabled="True" Height="20"></PasswordBox>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Label>Mentor</Label>
                        <CheckBox Margin="6"></CheckBox>
                        <ui:Button Content="WPF UI button" Icon="Fluent24" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical">

                    <ui:TextBox PlaceholderEnabled="True" PlaceholderText="Suche..." x:Name="search_treeview" SelectionChanged="search_treeview_SelectionChanged"></ui:TextBox>
                    <TreeView AllowDrop="True"  Width="500" Height="400" x:Name="subjects_TreeView" SelectedItemChanged="subjects_TreeView_SelectedItemChanged" >
                        <TreeViewItem Header="Informatik" IsExpanded="False">
                            <TreeViewItem Header="Feature Schedule"/>
                        </TreeViewItem>
                    </TreeView>
                </StackPanel>
            </StackPanel>

        </DockPanel>
    </Viewbox>
</Page>

    
